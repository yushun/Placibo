<div class="search" >
  <%= form_tag(new_searches_path, :method => "get", :class=>"form-inline")  do %>
    <%= text_field_tag :search , nil, placeholder: @search_text%>
    <%= link_to image_tag(@create_image), new_inspira_path, class: "btn pull-right" %>
  <% end %>
</div>
<div id="myCarousel" class="carousel slide">
  <div class="carousel-inner">
    <div class="active item">
  	  <img src= <%= @welcome_image %> alt="" class="pixastic pixastic-blur(amount=0.1)">
    </div>
    <% @images.each_with_index do |image, index| %>
      <% inspira = @inspiras[index] %>
      <div class="item">
  	    <img src= <%= image.sub("public","") %> alt="" class="pixastic pixastic-blur(amount=0.5)">
  	    <div class="inspira well transbox" style="top: <%=rand(0 .. 50)%>%; right: <%=rand(0 .. 60)%>%;"> 
  	      <p><%= inspira.message%></p>
  	      <%= pluralize inspira.reputation_value_for(:votes).to_i, "vote" %>
  	      |<%= link_to "up", vote_inspira_path(inspira, type: "up"), method: "post" %>
  	      |<%= link_to "down", vote_inspira_path(inspira, type: "down"), method: "post" %>
  	    </div>
      </div>
    <% end %>
  </div>
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>